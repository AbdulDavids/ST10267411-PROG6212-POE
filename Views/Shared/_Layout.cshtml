<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Contract Monthly Claim System</title>
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <!-- Custom Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <!-- Additional Custom Styles for Contract Monthly Claim System -->
    <link rel="stylesheet" href="~/css/cmcs.styles.css" asp-append-version="true" />
    
    <style>
        /* Custom Navbar Styling */
        .navbar {
            background-color: #343a40;
        }
        .navbar .navbar-brand, .navbar .nav-link {
            color: #f8f9fa;
        }
        .navbar .nav-link:hover {
            color: #ced4da;
        }

        /* Main Content Styling */
        main {
            padding-top: 2rem;
        }

        /* Footer Styling */
        footer {
            background-color: #343a40;
            color: #f8f9fa;
        }
        footer a {
            color: #f8f9fa;
        }
        footer a:hover {
            color: #ced4da;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CMCS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <!-- Dropdown for Lecturers -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="lecturerDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Lecturer Actions
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="lecturerDropdown">
                                <li><a class="dropdown-item" asp-controller="Lecturer" asp-action="Dashboard">View Claims</a></li>
                                <li><a class="dropdown-item" asp-controller="Lecturer" asp-action="SubmitClaim">Submit Claim</a></li>
                                <li><a class="dropdown-item" asp-controller="Lecturer" asp-action="UploadDocuments">Upload Documents</a></li>
                            </ul>
                        </li>

                        <!-- Dropdown for Programme Coordinators -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="coordDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Coordinator Actions
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="coordDropdown">
                                <li><a class="dropdown-item" asp-controller="ProgrammeCoordinator" asp-action="Dashboard">Approve Claims</a></li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="HumanResources" asp-action="Dashboard">HR Dashboard</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>



    <!-- jQuery and Bootstrap JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

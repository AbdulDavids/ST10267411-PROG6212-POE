@model List<Claim>

<div class="container mt-5">
    <h1>Lecturer Dashboard</h1>
    <div class="row mt-4">
        <div class="col-md-4">
            <a href="@Url.Action("SubmitClaim", "Lecturer")" class="btn btn-primary btn-block mb-3">
                Submit New Claim
            </a>
        </div>
        <div class="col-md-4">
            <a href="@Url.Action("ViewClaims", "Lecturer")" class="btn btn-secondary btn-block mb-3">
                View Past Claims
            </a>
        </div>
        <div class="col-md-4">
            <a href="@Url.Action("UploadDocuments", "Lecturer")" class="btn btn-info btn-block mb-3">
                Upload Documents
            </a>
        </div>
    </div>

    <h2 class="mt-5">Claim Status Tracker</h2>
    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>Claim ID</th>
                <th>Date Submitted</th>
                <th>Status</th>
                <th>Hours Worked</th>
                <th>Amount Due</th>
                <th>Last Updated</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.ClaimID</td>
                    <td>@claim.DateSubmitted.ToString("dd-MM-yyyy")</td>
                    <td>@claim.Status</td>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.AmountDue</td>
                </tr>
            }
        </tbody>
    </table>
</div>
